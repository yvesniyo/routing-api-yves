<!DOCTYPE html>
<html>
<head>
	<title><%= title; %></title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="assets/css/userSide.css">
	<link rel="stylesheet" type="text/css" href="font-awesome/css/font-awesome.min.css">
	<style type="text/css">
		.nav_ul li{
			position: relative;
		}
		.downList{
			position: absolute;
			right: 0;
			background-color: white;
			width: 500px;
			top: 33px;
			height: 200px;
			box-shadow: 0px 11px 18px 0px rgba(255,255,255,0.07);
			padding: 10px 20px;
			display: none;
		}
		.nav{
			transition:all 1s ease-in-out !important; 
		}
		.nav .nav_ul{
			display: none;
		}
		.menuIcon{
			display: block;
			height: 40px;
			width: 40px;
			margin-top: 5px;
			border-radius: 50%;
			margin-right: -15px;
			cursor: pointer;
		}
		.menuIcon i{
			color: black;
		}
		.textContainer{
			height: 400px;
			max-width: 750px;
			border:0px solid white;
			position: absolute;
			
			top: 90px;
			left: 15px;
			z-index: 100;
			padding-right: 20px;
			max-width: 230px;
			word-wrap: break-word;
		}
		.nav{
			border-bottom-left-radius: 0px;
		}
		.phoneNav{
			background: darkviolet;
			color: white;
			width: 100%;
			position: fixed;
			top: 50px;
			left: 0;
			padding: 20px;
		}
		.phoneNav li {

		    color: white;
		    display: block;
		    list-style: none;
		    margin-bottom: 10px;

		}
		.phoneNav li a {
		    color: white;
		    margin-bottom: 10px;
		}
		.phoneNav li.active a{
			border-bottom: 2px solid white;
		}
		.phoneNav li {
			font-family: sans-serif;
			margin-left: 24px;
			
		}
		.phoneNav li a:hover{
			border-bottom: 2px solid orange !important;

		}
		.errorPage h1{
			font-size: 150px !important;
		}
		/*non mobile styles breakthrough for tablet*/
		@media only screen and (min-width: 46.875em){
			.nav .nav_ul{
				display: block ;
			}
			.menuIcon{
				display: none;
			}
			.textContainer{
				top: 200px;
				max-width: auto;
			}
			.nav{
				border-bottom-left-radius: 100px;
			}
			.phoneNav{
				display: none;
			}
			.errorPage h1{
				font-size: 220px !important;
			}
			.textContainer {
				max-width: 700px !important;
			}
			.textContainer p{
				font-size: 18px !important;
			}
			div.form input{
				display: inline !important;
			}


		}


		/*medium sized screeb breakpoint desktop (tables 1050px)*/
		@media only screen and (min-width: 65.625em){
			.nav .nav_ul{
				display: block;
			}
			.menuIcon{
				display: none;
			}
			.textContainer{
				top: 200px;
				max-width: auto;
			}
			.nav{
				border-bottom-left-radius: 100px;
			}
			.phoneNav{
				display: none;
			}
			.errorPage h1{
				font-size: 220px !important;
			}
			.textContainer {
				max-width: 700px !important;
			}
			.textContainer p{
				font-size: 18px !important;
			}
			div.form input{
				display: inline !important;
			}

		}
		.hideMenu{
			display: none !important;
		}

		
		
	</style>
</head>
<body>
	<div class="header">
		<img src="assets/images/logo.png" class="logo">
		<div class="nav">
			<ul class="nav_ul">
				<li class="home"><a href="/">Home</a></li>
				<li class="products"><a href="/products">Products</a></li>
				<li class="pricing"><a href="#pricing">Pricing</a></li>
				<li class="documentation"><a href="/documentation">Documentation</a>
					<div class="downList">
						<p>Hello wordl</p>
						<p>Hello wordl</p>
						<p>Hello wordl</p>
						<p>Hello wordl</p>
						<p>Hello wordl</p>
					</div>
				</li>
				<li class="about"><a href="/about">About</a></li>
				<% if (login) { %>
					<li class="account"><a href="/dashboard">MyAccount</a></li>
				<% } else { %>
					<li class="login"><a href="/login">Login</a></li>
				<% } %>
			</ul>
			<span class="menuIcon" ><i class="fa fa-bars" style="color:white;font-size:35px;"></i></span>

			<ul class="phoneNav hideMenu">
				<li class="home"><a href="/">Home</a></li>
				<li class="products"><a href="/products">Products</a></li>
				<li class="pricing"><a href="/pricing">Pricing</a></li>
				<li class="documentation"><a href="/documentation">Documentation</a>
					<div class="downList">
						<p>Hello wordl</p>
						<p>Hello wordl</p>
						<p>Hello wordl</p>
						<p>Hello wordl</p>
						<p>Hello wordl</p>
					</div>
				</li>
				<li class="about"><a href="/about">About</a></li>
				<% if (login) { %>
					<li class="account"><a href="/dashboard">MyAccount</a></li>
				<% } else { %>
					<li class="login"><a href="/login">Login</a></li>
				<% } %>
			</ul>
		</div>
	</div>
	<script type="text/javascript">
	var path=document.location.pathname;
	path=path.replace("\"","");
	path=path.replace("/","");

	if(path=="register"){
		document.querySelector(".nav_ul li.login a").href="register";
		document.querySelector(".nav_ul li.login a").innerHTML="Register"
		document.querySelector(".nav_ul li.login").classList.add("active")
	}
	if(path==""){
		document.querySelector(".nav_ul .home").classList.add("active");
	}else if(document.querySelector(".nav_ul li."+path)){
		document.querySelector(".nav_ul li."+path).classList.add("active");
	}

	document.querySelector(".menuIcon").addEventListener("click",()=>{
		var menu=document.querySelector(".phoneNav");
		if(menu.classList.contains("hideMenu")){
			menu.classList.remove("hideMenu")
		}else{
			menu.classList.add("hideMenu")
		}
		
	})
	

	console.log(path)
	</script>