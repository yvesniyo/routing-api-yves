				<% } else { %>
					<li class="login"><a href="/login">Login</a></li>
				<% } %>
				
				
				
				
			</ul>
		</div>
	</div>
	<script type="text/javascript">
	var path=document.location.pathname;
	path=path.replace("\"","");
	path=path.replace("/","");

	if(path=="register"){
		document.querySelector(".nav_ul li.login a").href="register";
		document.querySelector(".nav_ul li.login a").innerHTML="Register"
		document.querySelector(".nav_ul li.login").classList.add("active")
	}
	if(path==""){
		document.querySelector(".nav_ul .home").classList.add("active");
	}else if(document.querySelector(".nav_ul li."+path)){
		document.querySelector(".nav_ul li."+path).classList.add("active");
	}
	

	console.log(path)
	</script>