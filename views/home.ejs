		/*blue color #1fa2dc;
		green color #4aba70*/
		/*Black color #3a3e47*/
		.form button{
			height: 36px;
			background-color: #9400d3;
			color:white;
			cursor: pointer;
			border:1px solid red;
			border: 1px solid #9400d3 !important;
			background: #041d1d !important;
		}
		.start{
			position: absolute;
			height: 30px;
			width: 220px;
			background-color: #9400d3;
			top: -60px;
			text-align: center;
			color:white;
			padding-top: 10px;
			z-index: 1;
		}
		.start:before{
			content: '';
			position: absolute;
			bottom: -15px;
			height: 30px;
			left: 7px;
			width: 30px;
			background-color: inherit;
			transform: rotate(45deg);
			z-index: 1;
		}
		.msg{
			position: fixed;
			bottom: 20px;
			right: 20px;
			height: 50px;
			width: 50px;
			border-radius: 50%;
			background-color: #4aba70;
			z-index: 200;
			background-image:url("assets/images/IMG_20190221_112417.jpg");
			background-size: 100% 100%; 
			border:1px solid white;
		}
		.msg .content{
			height: 40px;
			width: 160px;
			background-color: white;
			top: -60px;
			right: 10px;
			position: absolute;
			z-index: 200;
			border-radius: 5px;

		}
		.nav_ul{
			list-style-type: none;
			padding-top: 17px;
		}
		.nav_ul li.active a{
			border-bottom: 2px solid white;
		}
		.nav_ul li {
			font-family: sans-serif;
			display: inline;
			margin-left: 20px;
			
		}
		.nav_ul li a:hover{
			border-bottom: 2px solid white;
		}
		.nav_ul li a{
			font-size: 11px;
			cursor: pointer;
			/*border-bottom: 2px solid #1fa2dc;*/
			padding-bottom: 15px;
			letter-spacing: 2px;
			transition: all 0.1s;
			color:white;
			margin: 0;
			font-family: sans-serif;
		}
		.nav{
			float: right;
			padding-right: 50px;
			position: relative;
			background-color: darkviolet;
			height: 100%;
			padding-left: 35px;
			border-bottom-left-radius: 100px;
		}
		.logo{
			position: absolute;top: 5px;
			left: 20px;
			width: 40px;
			height: 40px;
		}
		.redHome{
			border-bottom: 1px solid red !important;
			background: #041d1d !important;
		}

	</style>
	<div class="wrapper">
		<div class="textContainer">
			<h1 class="heroHead" style="line-height: 10px">Route <br/> <span style="margin-left: 140px;"></span>& <br/> <span style="margin-left: 190px;"></span>Faster</h1><br />
			<p>Need help finding great routing api?</p>
			<p>One and only <span style="text-transform: uppercase;letter-spacing: 1px;">Rwanda</span> map routing service.</p>
			<p>You came to the right place</p>
			<br />
			<div style="height: 2px;width: 200px;background-color:#1fa2dc "></div>
			<div class="form">
				<div class="start">
					<div style="position: absolute;top: 0;left: 0;width: 100%;background-color: #9400d3;z-index: 10;height: 100%;padding-top: 0px;">
					<p style="padding-top: 10px;">Join us now.</p>
				</div>
				</div>
				<input type="text" name="name" placeholder="Your Name" autocomplete="off" class="name">
				<input type="text" name="email" placeholder="Your Email" autocomplete="off" class="email">
				<button class="startTrial">Start your free trial</button>
			</div>
		</div>
	</div>
	<div class="msg">
		<div class="content">
			<h1 style="letter-spacing: 0.3px;padding-top: 10px;font-family: sans-serif;text-align: center;">Hello, can I help?</h1>
		</div>
	</div>

<script type="text/javascript">
	var startTrial=document.querySelector(".startTrial");
	function selector(el){
			return document.querySelector(el);
		}
	startTrial.addEventListener("click",()=>{

		let name=selector(".name")
		let email=selector(".email")
		if(name.value.trim() === ""){
			name.classList.add("redHome")
		}else{
			name.classList.remove("redHome")
		}
		if(email.value.trim() === ""){
			email.classList.add("redHome")
		}else{
			email.classList.remove("redHome")
		}
		if(name.value.trim() !== "" && email.value.trim() !== ""){
			let user={
				name:name.value,
				email:email.value
			}
			user=JSON.stringify(user)
			localStorage.setItem("user",user)
			document.location.href="register"
		}
	})

	
</script>
